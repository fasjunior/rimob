<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="20" defaultlocale="pt-BR" id="com.br.rimob" ios-CFBundleVersion="1.3.1" version="1.3.1" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Rimob</name>
    <description>Rimob - Recadastramento Imobiliário</description>
    <author>3Tecnos Tecnologia</author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="http://app/*" />
    <allow-navigation href="https://app/*" />
    <allow-intent href="file:///*/*" />
    <access origin="app://*" />
    <preference name="android-build-tool" value="gradle" />
    <access launch-external="yes" origin="*" />
    <allow-intent href="*" />
    <allow-navigation href="*" />
    <preference name="xwalkMultipleApk" value="true" />
    <preference name="xwalk64bit" value="true" />
    <preference name="buildArchitecture" value="X86_64" />
    <plugin name="cordova-build-architecture" source="git" spec="https://github.com/MBuchalik/cordova-build-architecture.git#v1.0.4" />
    <plugin name="cordova-plugin-geolocation" source="git" spec="https://github.com/apache/cordova-plugin-geolocation" />
    <plugin name="cordova-plugin-camera" source="git" spec="https://github.com/alemit/cordova-plugin-camera">
        <variable name="CAMERA_USAGE_DESCRIPTION" value=" "/>
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value=" "/>
    </plugin>
    <preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="SplashScreenDelay" value="4000" />
    <variable name="GEOLOCATION_USAGE_DESCRIPTION" value=" " />
    <plugin name="cordova-plugin-splashscreen" spec="6.0.2" />
    <platform name="android">
        <hook src="hooks/android/modify-android-gradle-plugin-version.js" type="after_platform_add" />
        <preference name="AndroidInsecureFileModeEnabled" value="true" />
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <preference name="android-minSdkVersion" value="20" />
        <preference name="android-targetSdkVersion" value="30" />
        <preference name="android-installLocation" value="auto" />
        <preference name="android-signed" value="true" />
        <preference name="AndroidLaunchMode" value="singleTop" />
        <preference name="loadUrlTimeoutValue" value="700000" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" />
        </edit-config>
        <splash density="ldpi" height="426" orientation="portrait" src="package-assets/splash-320X426.png" width="320" />
        <splash density="mdpi" height="470" orientation="portrait" src="package-assets/splash-320X470.png" width="320" />
        <splash density="hdpi" height="640" orientation="portrait" src="package-assets/splash-480X640.png" width="480" />
        <splash density="xhdpi" height="960" orientation="portrait" src="package-assets/splash-720X960.png" width="720" />
        <splash density="ldpi" height="320" orientation="landscape" src="package-assets/splash-426X320.png" width="426" />
        <splash density="mdpi" height="320" orientation="landscape" src="package-assets/splash-470X320.png" width="470" />
        <splash density="hdpi" height="480" orientation="landscape" src="package-assets/splash-640X480.png" width="640" />
        <splash density="xhdpi" height="720" orientation="landscape" src="package-assets/splash-960X720.png" width="960" />
    </platform>
    <platform name="ios">
        <access origin="*" />
        <allow-intent href="*" />
        <preference name="deployment-target" value="12" />
        <preference name="ios-configuration" value="adhoc" />
        <preference name="iosPersistentFileLocation" value="Library" />
        <preference name="iosExtraFilesystems" value="library,library-nosync,documents,documents-nosync,cache,bundle,root" />
        <preference name="AllowBackForwardNavigationGestures" value="true" />
        <preference name="Allow3DTouchLinkPreview" value="false" />
        <splash src="res/screen/ios/Default@2x~universal~anyany.png" />
        <splash src="res/screen/ios/Default@2x~universal~comany.png" />
        <splash src="res/screen/ios/Default@2x~universal~comcom.png" />
        <splash src="res/screen/ios/Default@3x~universal~anyany.png" />
        <splash src="res/screen/ios/Default@3x~universal~anycom.png" />
        <splash src="res/screen/ios/Default@3x~universal~comany.png" />
    </platform>
    <icon density="ldpi" height="36" platform="android" src="package-assets/icon_36x36.png" width="36" />
    <icon density="mdpi" height="48" platform="android" src="package-assets/icon_48x48.png" width="48" />
    <icon density="hdpi" height="72" platform="android" src="package-assets/icon_72x72.png" width="72" />
    <icon density="xhdpi" height="96" platform="android" src="package-assets/icon_96x96.png" width="96" />
    <icon height="29" platform="ios" src="package-assets/icon_29x29.png" width="29" />
    <icon height="58" platform="ios" src="package-assets/icon_58x58.png" width="58" />
    <icon height="87" platform="ios" src="package-assets/icon_87x87.png" width="87" />
    <icon height="60" platform="ios" src="package-assets/icon_60x60.png" width="60" />
    <icon height="120" platform="ios" src="package-assets/icon_120x120.png" width="120" />
    <icon height="180" platform="ios" src="package-assets/icon_180x180.png" width="180" />
    <icon height="76" platform="ios" src="package-assets/icon_76x76.png" width="76" />
    <icon height="152" platform="ios" src="package-assets/icon_152x152.png" width="152" />
    <icon height="40" platform="ios" src="package-assets/icon_40x40.png" width="40" />
    <icon height="80" platform="ios" src="package-assets/icon_80x80.png" width="80" />
    <icon height="57" platform="ios" src="package-assets/icon_57x57.png" width="57" />
    <icon height="114" platform="ios" src="package-assets/icon_114x114.png" width="114" />
    <icon height="72" platform="ios" src="package-assets/icon_72x72.png" width="72" />
    <icon height="144" platform="ios" src="package-assets/icon_144x144.png" width="144" />
    <icon height="50" platform="ios" src="package-assets/icon_50x50.png" width="50" />
    <icon height="100" platform="ios" src="package-assets/icon_100x100.png" width="100" />
    <icon height="167" platform="ios" src="package-assets/icon_167x167.png" width="167" />
    <gap:config-file mode="merge" parent="/manifest/application" platform="android">
        <activity android:launchMode="singleTop" />
    </gap:config-file>
    <gap:config-file mode="replace" parent="NSPhotoLibraryUsageDescription" platform="ios">
        <string>Este aplicativo requer acesso à biblioteca de fotos.</string>
    </gap:config-file>
    <gap:config-file mode="replace" parent="NSCameraUsageDescription" platform="ios">
        <string>Este aplicativo requer acesso à câmera</string>
    </gap:config-file>
</widget>
